<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        PrintTo3D
    </title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/loginStyles.css">
    <link rel="stylesheet" href="css/layoutStyles.css">
    <link rel="stylesheet" href="css/reset.css">


    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <%- include('./partials/header') %>
    <main>
        <form class="form-login" action="/login" method="POST">
            <h1>Ingresa a PrintTo3D</h1>
            <input type="email" name="email" id="email" placeholder="Correo electronico">
            <h4 class="text-error" id="emailError"></h4>
            <% if(locals.errores && errores.email) { %>
                <h4 class="text-error"><%= errores.email.msg %></h4>
            <% } %>
            <input type="password" name="password" id="password" placeholder="Contrase単a">
            <h4 class="text-error" id="passwordError"></h4>
            <% if(locals.errores && errores.password) { %>
                <h4 class="text-error"><%= errores.password.msg %></h4>
            <% } %>
            <div class="checkbox-container"><label><input class="checkbox" type="checkbox" id="checkbox" name="checkbox">Recuerdame</label></div>
            <input type="submit" name="button" id="button" value="Acceder">
            <div class="contenedor-preguntas-login">
                <a href="#">多Olvidaste el correo electronico?</a>
                <a href="/recuperacion">多Olvidaste la contrase単a?</a>
            </div>
        </form>

    </main>
    <%- include('./partials/footer') %>
</body>
<script src="/js/loginValidation.js"></script>
</html>