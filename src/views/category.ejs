<!DOCTYPE html>
<html>

<head>
  <title>
    PrintTo3D
  </title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/layoutStyles.css">
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/categoryStyles.css">
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <%- include('./partials/header') %>
    <main>
      <section id="first-section">
        <div class="overlay"></div>
        <div class="content">
          <div class="search">
            <p>Busca tu producto</p>
            <input type="text" placeholder="Impresora...">
            <div class="button-container">
              <button type="button">
                Buscar
              </button>
            </div>
          </div>
        </div>
      </section>
      <h2 class="titulo-categoria">Impresoras 3D</h2>
      <div class="box-articulos">
        <% for(let i=0; i<productosId.length; i++) { %>
          <section class="contenedor-del-articulo">
            <a href="/productDetails/<%= productosId[i].id %>" >
              <div style="display: flex;justify-content: center;align-items: center;">
                <div style="background-image: url(<%= "/img/products/" + productosId[i].image  %>); width:80%; height:30vw; background-size: contain; background-repeat: no-repeat;background-position: center;  "></div>
            </div>
            <article>
              <div class="box-precio">
                <p class="precio"><%= productosId[i].price %>
                  <span class="descuento">20% off</span>
                </p>
              </div>
              <h3>
                <%= productosId[i].name %>
              </h3>
            </article>
            </a>
          </section>
          <% } %>
      </div>
    </main>
    <%- include('./partials/footer') %>
</body>

</html>